<nav class="bg-gradient-to-r from-slate-900 to-slate-800 shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-center items-center py-6 md:py-8">
      <div class="text-center">
        <h1 class="company-name text-5xl md:text-7xl font-bold text-white tracking-wider mb-2">
          Yeto
        </h1>
        <p class="tagline text-sm md:text-base text-gray-300">
          Endüstriyel Çözüm Ortağınız
        </p>
      </div>
    </div>
  </div>
</nav>

<style>
  .company-name {
    background: linear-gradient(
      45deg,
      #fff,
      #60a5fa,
      #fff,
      #60a5fa
    );
    background-size: 300% 300%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientShift 4s ease infinite, fadeInScale 1s ease-out;
    text-shadow: 0 0 30px rgba(96, 165, 250, 0.3);
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  }

  .tagline {
    opacity: 0;
    animation: fadeInUp 1s ease-out 0.5s forwards;
  }

  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes fadeInScale {
    0% {
      opacity: 0;
      transform: scale(0.8) translateY(-20px);
    }
    60% {
      transform: scale(1.05);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
